    <mapping key="summary/global_quantities/b0/value" value="//summary/equilibrium/global_param/toroid_field/b0/name" type="dynamic"/>
    <mapping key="summary/global_quantities/b0/time" value="//summary/equilibrium/global_param/toroid_field/b0/name" type="dynamic"/>
