    <mapping key="summary/local/magnetic_axis/n_e/source" value="JET MDSplus signal PPF/HRTX/NE0" type="constant"/>

    <mapping key="summary/local/magnetic_axis/t_e/value" value="//summary/thomson_scattering/te/name" type="dynamic"/>
