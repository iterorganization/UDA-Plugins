    <mapping key="summary/boundary/elongation/time" value="//summary/equilibrium/eqgeometry/elongation/name" type="dynamic"/>
    <mapping key="summary/boundary/elongation/source" value="JET MDSplus signal PPF/EFIT/ELON" type="constant"/>

