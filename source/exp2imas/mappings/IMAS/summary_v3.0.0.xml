<?xml version="1.0" encoding="UTF-8"?>
<!-- would be better to get the plugin to read source signal from the JET xml than to hard code here-->
<mappings>
    <!-- Ids properties -->
    <mapping key="summary/ids_properties/comment" value="Test instance of JET summary mappings. Time bases are all interpolated onto 100 points." type="constant"/>
    <mapping key="summary/ids_properties/homogeneous_time" value="1" type="constant"/>
    
    <!-- global quantities -->
    <mapping key="summary/global_quantities/r0/value" value="2.96" type="constant"/>
